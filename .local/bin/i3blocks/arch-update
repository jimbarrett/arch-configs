#!/bin/sh

case $BLOCK_BUTTON in
	1) st -n update -e sudo pacman -Syu &;;
esac

cval=$(/usr/bin/checkupdates|wc -l)

icon=" &#xf0ab;"

if [ "$cval" != "0" ]; then
	full_text="$cval updates available. "
else
	full_text="System up to date. "
	icon=" &#xf058;"
fi

printf "%s %s\\n" "$icon" "$full_text"
